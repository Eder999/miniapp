<div class='row'>
  <div class='col-sm-12' align='center'>
    <div id='att_msg' class='text-success'></div>
  </div>
</div>
<div class='row'>
  <div id='main_page_tabs' class='col-sm-12'>
    </br>
    <ul class="nav nav-tabs" role="tablist">
      <li class="nav-item">
        <%= link_to({controller: :lists, action: :new},
                    {class: 'nav-link'}) do
        %>
          <i class='fa fa-plus med-icon' aria-hidden='true'></i> Criar Lista
        <% end %>
      </li>
      <li class="nav-item">
        <a id='aaaa' class="nav-link active" data-toggle="tab" href="#list">
          Minhas Listas
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#public">
          Listas Públicas
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#favorite">
          Listas Favoritas
        </a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="list" class="container-fluid tab-pane active">
        <%= render partial: 'list' %>
      </div>
      <div id="public" class="container-fluid tab-pane fade">
        <%= render partial: 'public' %>
      </div>
      <div id="favorite" class="container-fluid tab-pane fade">
        <%= render partial: 'favorite' %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-danger text-white">
        <h5 class="modal-title">Apagar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Deseja realmente deletar a lista
        <strong><span id="modal_list_name">teste</span></strong>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" >
          Voltar
        </button>
        <%= link_to({controller: :lists, action: :delete, id: 1},
                    {id: :delete_button, class: 'btn btn-danger'}) do
        %>
          Confirmar Exclusão
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  verify_new_info('att_msg');

  function edit_modal(name, id){
    $("#modal_list_name").text(name);
    $("#delete_button").prop('href', "/lists/delete?id="+id)
  }
</script>

